{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://example.com/course.schema.json",
    "title": "Course",
    "description": "Estructura de un curso e-learning para...",
    "required": [ "id", "title" ],
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "id": {
            "description": "Identificador único para un curso",
            "type": "string"
        },
        "title": {
            "description": "Título del curso",
            "type": "string"
        },
        "sections": {
            "description": "Secciones del curso",
            "type": "array",
            "items": {
                "$ref": "section.schema.json"
            }
        }        
    }
}